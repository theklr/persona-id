    <div id="wrapper">
        <!-- main-nav -->
        <div class="main-nav container">
            <div class="logo-left">
                @Html.ActionLink("Persona", "Index", "Home", new { @class = "navbar-brand" })
                @*<img class="responsive-img" src="~/Content/img/logo/PERSONA (1).png" alt="logo">*@


                <a href="javascript:void(0)" class="menu-trigger">
                    <i class="fa fa-bars"></i>
